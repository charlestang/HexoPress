{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["../web/**/*.ts", "../shared/**/*", "../types/**/*.d.ts"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.web.tsbuildinfo",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "rootDirs": ["../web", "../shared"],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
