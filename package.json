{
  "name": "hexopress",
  "productName": "HexoPress",
  "version": "1.0.0",
  "private": true,
  "description": "A client software for Hexo blog.",
  "author": {
    "name": "Charles",
    "email": "charlestang@foxmail.com"
  },
  "type": "module",
  "main": "main.mjs",
  "scripts": {
    "dev": "NODE_ENV=dev concurrently -k \"vite\" \"yarn:electron\"",
    "dev:win": "set NODE_ENV=dev && concurrently -k \"vite\" \"yarn:electron\"",
    "electron": "wait-on tcp:5173 && electron .",
    "test": "vitest",
    "build": "concurrently --kill-others-on-fail \"yarn:type-check\" \"yarn:build-only\"",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "build-only": "vite build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "forge:start": "electron-forge start",
    "forge:package": "electron-forge package",
    "forge:make": "electron-forge make",
    "forge:publish": "electron-forge publish"
  },
  "dependencies": {
    "@fastify/static": "^7.0.1",
    "@replit/codemirror-vim": "^6.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "element-plus": "^2.5.6",
    "fastify": "^4.26.1",
    "hexo": "^7.1.1",
    "hexo-front-matter": "^4.2.1",
    "hexo-fs": "^4.1.1",
    "hexo-util": "^3.2.0",
    "md-editor-v3": "^4.11.2",
    "path-browserify": "^1.0.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.19",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@rushstack/eslint-patch": "^1.7.2",
    "@tsconfig/node20": "^20.1.2",
    "@types/hexo-util": "^0.6.8",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.19",
    "@types/path-browserify": "^1.0.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "electron": "29.0.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.21.1",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.3",
    "vitest": "^1.3.1",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0",
    "web-storage-cache": "^1.1.1"
  },
  "license": "MIT",
  "packageManager": "yarn@4.1.0"
}
