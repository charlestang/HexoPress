{
  "name": "hexopress",
  "version": "1.2.0",
  "private": true,
  "description": "A client software for Hexo blog.",
  "license": "MIT",
  "author": {
    "name": "Charles",
    "email": "charlestang@foxmail.com"
  },
  "main": ".vite/build/main.js",
  "scripts": {
    "check-all": "concurrently -c \"bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold\" npm:vue-check npm:vitest-check npm:node-check npm:conf-check",
    "conf-check": "tsc --noEmit -p tsconfig/tsconfig.tools.json",
    "dev": "electron-forge start",
    "format": "prettier --write src/ main/ types/ *.ts *.json *.cjs *.md",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "make": "electron-forge make",
    "node-check": "tsc --noEmit -p tsconfig/tsconfig.node.json",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "start": "electron-forge start",
    "test": "vitest",
    "vitest-check": "vue-tsc --noEmit -p tsconfig/tsconfig.vitest.json",
    "vue-check": "vue-tsc --noEmit -p tsconfig/tsconfig.app.json"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@replit/codemirror-vim": "^6.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "element-plus": "^2.8.2",
    "fastify": "^4.28.1",
    "hexo": "^7.3.0",
    "hexo-front-matter": "^4.2.1",
    "hexo-fs": "^4.1.3",
    "hexo-util": "^3.3.0",
    "md-editor-v3": "^4.20.0",
    "path-browserify": "^1.0.1",
    "pinia": "^2.2.2",
    "vue": "^3.5.3",
    "vue-i18n": "^9.14.0",
    "vue-router": "^4.4.3",
    "vue3-calendar-heatmap": "^2.0.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-vite": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/hexo-util": "^0.6.8",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.5.4",
    "@types/path-browserify": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "electron": "^32.0.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.4.0",
    "eslint-plugin-vue": "^9.28.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.3",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.1.6",
    "web-storage-cache": "^1.1.1"
  },
  "productName": "HexoPress"
}
